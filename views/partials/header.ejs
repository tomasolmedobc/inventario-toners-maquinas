<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comprobantes</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <!-- BoxIcons -->
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <!-- Tu archivo CSS personalizado -->
    <link rel="stylesheet" href="/resources/css/style.css">

</head>
<body>

    <header>
        <h1>Sistema de Inventario</h1>
        <script src="/resources/js/themeMode.js"></script>

  <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
          <div class="container-fluid">
            
            <a class="navbar-brand" href="/dev/dashboard">Inventario</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
              <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav me-auto">
                <li class="nav-item">
                  <a class="nav-link" href="/dev/inventario">Lista de productos</a>
                </li>
              </ul>
                              <!-- Empieza el boton de modo de web-->
                <div class="theme-switch checkbox">
                  <input id="theme-checkbox" type="checkbox" id="theme-checkbox" />
                  <label class="toggle" for="theme-checkbox"><span></span></label>
                </div>

              <div class="d-flex gap-2">
                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalCargaInicial">Carga Inicial</button>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalReabastecimiento">Reabastecer</button>
                <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalSalida">Registrar Salida</button>
              </div>
            </div>
          </div>
                  <div class="d-flex align-items-center ms-3">
                    <% if (usuario && usuario.nombre) { %>
          <div class="d-flex align-items-center ms-3 text-white">
            <span class="me-2">Hola, <strong><%= usuario.nombre %></strong></span>
            <a href="/auth/logout" class="btn btn-outline-light btn-sm">Cerrar sesión</a>
          </div>
        <% } %>

          </div>
        </nav>
    </header>
<main>
  <!-- Modal: Carga Inicial -->
<div class="modal fade" id="modalCargaInicial" tabindex="-1" aria-labelledby="modalCargaInicialLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form class="modal-content" id="formCargaInicial">
      <div class="modal-header">
        <h5 class="modal-title" id="modalCargaInicialLabel">Carga Inicial de Producto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <input class="form-control mb-2" name="tipo" placeholder="Tipo de producto" required>
        <input class="form-control mb-2" name="marca" placeholder="Marca" required>
        <input class="form-control mb-2" name="modelo" placeholder="Modelo" required>
        <input class="form-control mb-2" name="compatibilidad" placeholder="Compatibilidad (opcional)">
        <input type="number" class="form-control" name="cantidad" placeholder="Cantidad" required>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success">Guardar</button>
      </div>
    </form>
  </div>
</div>

<!-- Modal: Reabastecimiento (entrada de stock) -->
<div class="modal fade" id="modalReabastecimiento" tabindex="-1" aria-labelledby="modalReabastecimientoLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form class="modal-content" id="formEntradaStock">
      <div class="modal-header">
        <h5 class="modal-title" id="modalReabastecimientoLabel">Reabastecer Producto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">

        <!-- Spinner -->
        <div id="spinnerCargaEntrada" class="text-center my-2" style="display:none;">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
          </div>
        </div>

        <!-- Select de Tipo -->
        <select class="form-select mb-2" id="selectTipoProductoEntrada" required>
          <option value="">Seleccionar tipo de producto</option>
        </select>

        <!-- Select de Producto -->
        <select class="form-select mb-2" name="producto" id="selectProductoEntrada" required disabled>
          <!-- Se llenará automáticamente -->
        </select>

        <input type="number" class="form-control mb-2" name="cantidad" placeholder="Cantidad" required>
        <input type="hidden" name="tipo" value="entrada">

      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Agregar</button>
      </div>
    </form>
  </div>
</div>

<!-- Modal: Salida de Producto -->
<div class="modal fade" id="modalSalida" tabindex="-1" aria-labelledby="modalSalidaLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form class="modal-content" id="formSalidaStock">
      <div class="modal-header">
        <h5 class="modal-title" id="modalSalidaLabel">Registrar Salida de Producto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">

        <!-- Spinner -->
        <div id="spinnerCarga" class="text-center my-2" style="display:none;">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
          </div>
        </div>

        <!-- Select de Tipo -->
        <select class="form-select mb-2" id="selectTipoProducto" required>
          <option value="">Seleccionar tipo de producto</option>
        </select>

        <!-- Select de Producto -->
        <select class="form-select mb-2" name="producto" id="selectProducto" required disabled>
          <!-- Se llenará automáticamente -->
        </select>

        <input type="number" class="form-control mb-2" name="cantidad" placeholder="Cantidad a retirar" required>
        <input class="form-control mb-2" name="area" placeholder="Área destino">
        <input class="form-control mb-2" name="observacion" placeholder="Observación (opcional)">
        <input type="hidden" name="tipo" value="salida">
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-warning">Registrar salida</button>
      </div>
    </form>
  </div>
</div>
